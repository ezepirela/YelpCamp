<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/star.css">
<div class="card mb-3">
    <div class="row">
        <div class="col-md-6">
          <div id='map' ></div>
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <%campgrounds.images.forEach((img, i) => { %>
              <div class="carousel-item <%= i === 0 ? 'active' : "" %>">
                <img src="<%= img.url%>" class="d-block w-100" alt="...">
              </div>
            <% }) %> 
            </div>
            <% if(campgrounds.images.length > 1) { %> 
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          <% } %> 
          </div>
            <div class="card-body">
              <h5 class="card-title"><%=campgrounds.title %></h5>
              <p class="card-text"><%=campgrounds.description%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%=campgrounds.location%></li>
              <li class="list-group-item text-muted">Submited By:<%=campgrounds.author.username%></li>
              <li class="list-group-item">$<%=campgrounds.price%>/night</li>
            </ul>
            <% if( currentUser && campgrounds.author.equals(currentUser._id)  ) { %> 
            <div class="card-body">
              <a href="/campgrounds/<%=campgrounds._id%>/edit" class="card-link btn-warning">Edit </a>
              <form class='d-inline' action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
                <button class='btn btn-danger'>Delete</button>
            </form>
            </div>
          <% } %> 
          </div>
          <div class="col-6">
            <% if(currentUser){ %> 
            <h2>leave a Rating</h2> 
            <form action="/campgrounds/<%= campgrounds._id %>/review" novalidate method="POST" class='mb-3 needs-validation'>
              <fieldset class="starability-basic">
                <legend>First rating:</legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            <div class="mb-3">
              <label class="form-label" for="review">Review</label>
              <textarea class='form-control' name="review[body]" id="review" cols="30" rows="3" required></textarea>
              <div class="valid-feedback">
                looks good!
              </div>
            </div>  
            <button class='btn btn-success'>Submit</button>
          </form>
        <% } %> 
          <% for(let review of campgrounds.reviews) { %> 
          <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Rating: <%=review.rating %></h5>
                <h3>Rated element name</h3>
                <p class="starability-result" data-rating=<%= review.rating %>>
                  Rated: <%=review.rating  %> 
                </p>
                <h5 class="card-subtitle text-muted mb-2">By: <%=review.author.username %></h5>
                <p class="card-text"><%=review.body%></p>
                <% if(currentUser && review.author.equals(currentUser._id)) {%> 
                <form action="/campgrounds/<%=campgrounds._id%>/review/<%=review._id%>?_method=DELETE" method='POST'>
                <button class='btn btn-sm btn-danger'>Delete </button>
                </form> 
               <% } %> 
            </div>
          </div>
          <% } %> 
          </div>
        </div>
    </div>
<script>

const campground = <%- JSON.stringify(campgrounds) %>;
const mapToken = '<%=process.env.MAPBOX_TOKEN %>';
</script>
