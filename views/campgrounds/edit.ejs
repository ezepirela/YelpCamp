<% layout('layouts/boilerplate') %>
        <div class="row">
            <h1 class="text-center m-auto">Edit Campground</h1>
            <div class="col-6 offset-3">
                <form action='/campgrounds/<%=campgrounds._id %>?_method=PUT' enctype="multipart/form-data" method="POST" novalidate class='needs-validation' >
                 <div class="mb-3">
                     <label class='form-label' for="title" >Title</label>
                     <input class='form-control' type="text" name="campgrounds[title]" required id="title"value="<%=campgrounds.title %>">
                     <div class="valid-feedback">
                        looks good!
                    </div>
                 </div>
                 <div class="mb-3"> 
                     <label class='form-label' for="location" >Location</label>
                     <input class='form-control' type="text" name="campgrounds[location]" requiredid="location" value="<%=campgrounds.location %>">
                     <div class="valid-feedback">
                        looks good!
                    </div>
                 </div>
                 <div class="mb-3">
                     <label for="price" class="form-labe">Campground Price</label>
                     <div class="input-group">
                         <span class="input-group-text" id='price'>$</span>
                         <input type="text" class='form-control' id='price' required value="<%=campgrounds.price %>" name='campgrounds[price]' placeholder=0>
                         <div class="valid-feedback">
                            looks good!
                        </div>
                     </div>
                 </div>
                 <div class="mb-3"> 
                     <label class='form-label' for="description" >description</label>
                     <textarea class='form-control' name="campgrounds[description]" required id="description"><%=campgrounds.description %></textarea>
                     <div class="valid-feedback">
                        looks good!
                    </div>
                 </div>
                 <div class="mb-3"> 
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name='image' multiple id="image">
                        <label class="custom-file-label" for="image">Choose images</label>
                      </div>
                    <!-- <input type="file" name="image" multiple id=""> -->
                    <!-- <label class='form-label' for="image" >Image url</label>
                    <input class='form-control' type="text" name="campgrounds[image]" id="image" required>
                    <div class="valid-feedback">
                        looks good!
                    </div> -->
                </div>
                <div class="mb-3">
                    <% campgrounds.images.forEach((img, i) => { %> 
                        <img src="<%=img.thumbnail %>" alt="" class="img-thumbnail">
                        
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" value='<%=img.filename%>' id="Image<%=i%>">
                        </div>
                        <label for="Image<%= i%>">Delete?</label>
                        <% }) %> 
                </div>
                 <div class="mb-3">
                     <button class='btn btn-info'>Edit Campground</button>
                 </div>
                 </form>
                 <a href="/campgrounds" class='btn btn-info'>All campgrounds</a>
            </div>
        </div>